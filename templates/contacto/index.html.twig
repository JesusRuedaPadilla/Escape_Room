{% block body %}
	<!-- Page Heading
		================================================== -->
		<div class="page-heading jarallax" data-jarallax data-speed="0.2" url("https://escapium.dan-fisher.dev/assets/img/samples/slide-1.jpg")>
			<div class="page-heading__inner">
				<div class="container">
					<h1 class="page-heading__title">Contacto</h1>
					<ol class="breadcrumb page-heading__breadcrumb">
						<li class="breadcrumb-item"><a href="/index">Inicio</a></li>
						<li class="breadcrumb-item active" aria-current="page">Contacto</li>
					</ol>
				</div>
			</div>
		</div>
		<!-- Page Heading / End -->
		
		<!-- Content
		================================================== -->
		<main class="site-content">
		
		<div class="section-content">
			<div class="container">
		
				<div class="row">
					<div class="col-md-3">
		
						<h2>Ponte en contacto con nosotros</h2>
						<p>Si está interesado en trabajar con nosotros, póngase en contacto con nosotros</p>
		
						<ul class="contact-info list-unstyled">
							<li class="contact-info__item">
								<span class="contact-info__icon">
									<i class="icon-map"></i>
								</span>
								<div class="contact-info__txt">
									2390 RoadHill St., Suite 100<br>
									 NY 82153
								</div>
							</li>
							<li class="contact-info__item">
								<span class="contact-info__icon">
									<i class="icon-phone"></i>
								</span>
								<div class="contact-info__txt">
									+34 200 900 124
								</div>
							</li>
							<li class="contact-info__item">
								<span class="contact-info__icon">
									<i class="icon-envelope"></i>
								</span>
								<div class="contact-info__txt">
									<a href="mailto:info@thescaperoom.com">info@thescaperoom.com</a>
								</div>
							</li>
						</ul>
		
					</div>
					<div class="col-md-8 offset-md-1">
						<h2>Formulario de contacto</h2>
						<!-- Contact Form -->
						<form action="#" id="contact-form">
		
							<div class="row">
								<div class="col-md-6">
									<div class="form-group form-group--lg">
										<input type="text" class="form-control" id="contact-name" placeholder="Nombre">
									</div>
								</div>
								<div class="col-md-6">
									<div class="form-group form-group--lg">
										<input type="email" class="form-control" id="contact-email" placeholder="Direccion de correo electronico">
									</div>
								</div>
							</div>
		
							<div class="form-group form-group--lg">
								<textarea id="contact-message" class="form-control" rows="8" placeholder="Escribe aqui tu mensaje...."></textarea>
							</div>
		
							<input type="button" class="btn btn-primary btn-lg btn-block" value="Enviar mensaje">
						</form>
						<!-- Contact Form / End -->
					</div>
				</div>
		
			</div>
		</div>
		
		<!-- Google Map -->
		<div class="gm-map gm-map--fixed" data-map-style="shades-of-grey" data-map-address="Central Park, New York, US" data-map-icon="assets/img/gmap-logo.png" data-map-zoom="15"></div>
		<!-- Google Map / End -->
		
		</main>


{% endblock %}
